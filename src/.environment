# general
export LANG=en_US.UTF-8
export LESS='-R'
export LESSCHARSET=utf-8
export TERM=xterm-256color
export PATH=~/bin:$PATH

if [ -d ~/Library/Python/2.7/bin ]; then
    export PATH=~/Library/Python/2.7/bin:$PATH
fi

if [ -d ~/Library/Python/3.7/bin ]; then
    export PATH=~/Library/Python/3.7/bin:$PATH
fi

# powerline
case "$OSTYPE" in
darwin*)
    if [ -d ~/Library/Python/2.7/lib/python/site-packages/powerline ]; then
        export POWERLINE_HOME=~/Library/Python/2.7/lib/python/site-packages/powerline
    elif [ -d ~/Library/Python/3.7/lib/python/site-packages/powerline ]; then
        export POWERLINE_HOME=~/Library/Python/3.7/lib/python/site-packages/powerline
    fi
    ;;
linux*)
    if [ -d /usr/local/lib/python2.7/dist-packages/powerline ]; then
        export POWERLINE_HOME=/usr/local/lib/python2.7/dist-packages/powerline
    fi
    ;;
esac

# load user configuration
if [ -f ~/.config/shell/.environment ]; then
    . ~/.config/shell/.environment
fi
